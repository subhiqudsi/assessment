# Django settings
DEBUG=1
SECRET_KEY=your-secret-key-here

# Database settings (if using PostgreSQL in production)
DATABASE_URL=postgres://myuser:mypassword@postgres:5432/mydatabase

# Elasticsearch settings
ELASTICSEARCH_HOSTS=elasticsearch:9200
ELASTICSEARCH_USE_SSL=False
ELASTICSEARCH_VERIFY_CERTS=False

# Optional: If using authentication
# ELASTICSEARCH_AUTH_TYPE=basic
# ELASTICSEARCH_USERNAME=elastic
# ELASTICSEARCH_PASSWORD=changeme

# Optional: If using API key authentication
# ELASTICSEARCH_AUTH_TYPE=api_key
# ELASTICSEARCH_API_KEY=your-api-key-here

# Storage backend
STORAGE_BACKEND=local

# AWS settings (if using S3)
# AWS_STORAGE_BUCKET_NAME=your-bucket
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_REGION_NAME=eu-central-1